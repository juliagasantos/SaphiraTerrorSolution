@model SaphiraTerror.ViewModels.UsuarioViewModel
@*A View recebe um UsuarioViewModel, que contém os dados necessários para criar um usuário.*@ 

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <!-- Formulário que será enviado para a Action Create (POST) no UsuarioController. -->

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
        <!-- asp-for liga o input à propriedade Nome do ViewModel.
             asp-validation-for mostra mensagens de validação (DataAnnotations). -->
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" class="form-control" type="password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataNascimento" class="form-label"></label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoUsuarioId" class="form-label"></label>
        <select asp-for="TipoUsuarioId" asp-items="Model.TiposUsuario" class="form-select">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="TipoUsuarioId" class="text-danger"></span>
        <!-- asp-items popula o select com a lista TiposUsuario passada no ViewModel. -->
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Inclui os scripts de validação client-side (jQuery Validation + Unobtrusive). -->
}
