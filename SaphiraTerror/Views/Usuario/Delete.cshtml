@model SaphiraTerror.Models.Usuario
@*A View recebe diretamente o model Usuario, sem ViewModel.*@

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2>Tem certeza que deseja excluir este usuário?</h2>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Data de Nascimento</dt>
    <dd class="col-sm-10">@Model.DataNascimento.ToShortDateString()</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.TipoUsuario?.DescricaoTipoUsuario</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdUsuario" />
    <!-- Campo hidden envia o ID do usuário que será excluído. -->
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>